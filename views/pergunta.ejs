<%- include('./partials/header.ejs') %>

<body>
   <%- include('./partials/navbar.ejs') %>

   <div class="container">
      <hr>
      <h1><%= pergunta.titulo %></h1>
      <p><%= pergunta.descricao %></p>
      <hr>

      <form method="POST" action="/responder">
         <h3>Responda: </h3>
         <textarea name="corpo" placeholder="Digite sua Resposta" class="form-control"></textarea>
         <br>
         <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
         <button type="submit" class="btn btn-primary">Responder</button>
      </form>

      <hr>
      <h4>Respostas Anteriores: </h4>
      <hr>

      <% respostas.forEach(resp => { %>
         <div class="card">
            <div class="card-body">
               <p><%= resp.corpo %></p>
            </div>
         </div>

         <br>
      <% }) %>
   </div>
</body>

<%- include('./partials/footer.ejs') %>